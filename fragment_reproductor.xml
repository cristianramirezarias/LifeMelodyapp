<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reproductor_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReproductorFragment"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/colorSurfaceContainer">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_media_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="275dp" />

    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LifeMelody"
        android:textSize="22sp"
        android:textColor="?attr/colorOnBackground"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btn_config_main"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Configuración"
        android:src="@drawable/ic_ajustes"
        app:tint="?attr/colorOnBackground"
        app:layout_constraintBottom_toBottomOf="@+id/tv_app_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_app_title" />

    <FrameLayout
        android:id="@+id/frame_layout_portada_container"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_portada"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imagen_portada_foto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Miniatura de la canción" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imagen_portada_icono"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Miniatura de la canción"
            android:src="@drawable/ic_note"
            app:tint="?attr/colorOnBackground"/>
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_video_player"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:visibility="gone"

        app:layout_constraintTop_toBottomOf="@+id/guideline_media_center"
        app:layout_constraintBottom_toTopOf="@+id/guideline_media_center">

        <androidx.media3.ui.PlayerView
            android:id="@+id/videoPlayerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:resize_mode="fit"
            app:use_controller="false" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_media_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="450dp" />

    <LinearLayout
        android:id="@+id/contenedor_inferior"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <SeekBar
            android:id="@+id/barra_progreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="?attr/colorOnBackground"
            android:thumbTint="?attr/colorOnBackground" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tiempo_actual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="00:00"
                    android:textColor="?attr/colorOnSurface" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tiempo_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="00:00"
                    android:textColor="?attr/colorOnSurface" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/contenedor_controles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/btn_repetir"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Botón para repetir canción"
                android:src="@drawable/ic_repeat"
                app:tint="?attr/colorOnBackground" />

            <LinearLayout
                android:id="@+id/controles_principales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_anterior"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_marginEnd="3dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Botón de canción anterior"
                    android:src="@drawable/ic_previus"
                    app:tint="?attr/colorOnBackground" />

                <ImageButton
                    android:id="@+id/btn_play_pause"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="20dp"
                    android:background="@drawable/circulo_negro_fondo"
                    android:contentDescription="Botón de reproducir/pausar"
                    android:src="@drawable/ic_pause" />

                <ImageButton
                    android:id="@+id/btn_siguiente"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_marginStart="3dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Botón de siguiente canción"
                    android:src="@drawable/ic_next"
                    app:tint="?attr/colorOnBackground" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_favorite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Botón de favoritos"
                android:src="@drawable/ic_heart"
                app:tint="?attr/colorOnBackground" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/titulo_cancion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/titulo_cancion"
        android:textColor="?attr/colorOnBackground"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nombre_artista"
        app:layout_constraintTop_toBottomOf="@+id/guideline_media_bottom"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/nombre_artista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/nombre_artista"
        android:textColor="?attr/colorOnBackground"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_cancion"
        app:layout_constraintBottom_toTopOf="@+id/contenedor_inferior"/>

</androidx.constraintlayout.widget.ConstraintLayout>